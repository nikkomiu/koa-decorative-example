{
  "collectCoverage": true,
  "coverageReporters": ["lcov", "clover"],
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!**/node_modules/**"
  ],
  "preset": "ts-jest",
  "coverageDirectory": "<rootDir>/coverage",
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "reporters": ["default", "jest-simple-summary"],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "testURL": "http://localhost",
  "testRegex": "/src/.*(\\.spec)\\.(j|t)s$"
}
